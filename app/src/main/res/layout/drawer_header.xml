<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/Iv_user_img_drawer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_drawer_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:text="Shrey Bhatt"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/Iv_user_img_drawer"
        app:layout_constraintTop_toTopOf="parent" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="12dp"
    android:text="bhatt.shrey1224@gmail.com"
    android:layout_marginStart="30dp"
    android:layout_marginTop="2dp"
    app:layout_constraintStart_toEndOf="@+id/Iv_user_img_drawer"
    app:layout_constraintTop_toBottomOf="@+id/tv_drawer_header_name"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/Iv_user_img_drawer" />

</androidx.constraintlayout.widget.ConstraintLayout>