<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_card_list_item"
    android:backgroundTint="@color/Primary1"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp">
    <ImageView
        android:id="@+id/articles_image_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <androidx.cardview.widget.CardView
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/design_default_color_error">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <TextView
           android:id="@+id/Tv_placeOfArticle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="left"
           android:layout_marginTop="2dp"
           android:layout_marginLeft="10dp"
           android:text="Delhi"
           android:textColor="@color/white"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />
       <TextView
           android:id="@+id/Tv_timeOfArticle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="left"
           android:layout_marginTop="3dp"
           android:layout_marginLeft="10dp"
           android:text="10:15"
           android:textColor="@color/white"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/Tv_placeOfArticle"/>

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintRight_toLeftOf="@+id/share_button"
           app:layout_constraintTop_toTopOf="parent"
           android:src="@drawable/ic_save"
           android:layout_gravity="right"
           android:layout_marginTop="10dp"
           android:layout_marginRight="10dp"
           />

       <ImageView
           android:id="@+id/share_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:src="@drawable/ic_share"
           android:layout_gravity="right"
           android:layout_marginTop="10dp"
           android:layout_marginRight="15dp"
           />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>